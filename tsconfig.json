{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": false,
        
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
	    "experimentalDecorators": true,
	    "lib": [ "es2015", "dom" ],
	    "suppressImplicitAnyIndexErrors": true,
        
        "outDir": "dist/app"
        
    },
    
    "include": [ "src/**/*" ],
    "exclude": [ "node_modules" ]
}